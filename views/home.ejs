<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Home</title>
</head>
<body>
    <div class="mx-auto mt-2 mb-4" style="max-width:500px">
        <form action="/" method="post">
            <div class="form-floating">
                <input type="text" name = "symbol" class="form-control" id="floatingInput" placeholder="Symbol">
                <label for="floatingInput">Stock Symbol</label>
              </div>
              <div class="form-floating">
                  <input type="text" name = "quantity" class="form-control" id="floatingInput" placeholder="Quantity">
                  <label for="floatingInput">Stock Quantity</label>
                </div>
              <div class="form-floating">
                <input type="text" name = "buyprice" class="form-control" id="floatingInput" placeholder="Price">
                <label for="floatingInput">Stock Buying Price</label>
              </div>
              <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
        </form>
      </div>

        <%data.forEach(function(i){%>
        <div class="mx-auto my-4 border border-primary"  style="max-width:500px">
          <div class="row">
            <div class="col">
              Stock Symbol: <%= i.symbol%>
            </div>
            <div class="col">
              Quantity: <%= i.quantity%>
            </div>
          </div>
          <div class="row">
            <div class="col">
              Average Price: <%= i.avg_price%>
            </div>
            <div class="col">
              Market Price: <%= i.market_price%>
            </div>
          </div>
          <div class="row">
            <div class="col">
              Investment: <%= parseFloat(i.quantity * i.avg_price).toFixed(2)%>
            </div>
            <div class="col">
              Profit/Loss: <%= parseFloat(i.quantity * i.market_price- i.quantity * i.avg_price).toFixed(2)%>
            </div>
          </div>
        </div>
        <%})%>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>